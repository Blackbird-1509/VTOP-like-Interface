generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  Student
  Parent
  Faculty
  Admin
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     Role
}

model Course {
  id            Int            @id @default(autoincrement()) // primary key
  uuid          String         @unique @default(uuid()) // unique UUID
  courseId      String         @unique // e.g., "CS101"
  name          String // course name
  faculty       String // faculty in charge
  registrations Registration[]
}

model Registration {
  id           Int      @id @default(autoincrement())
  studentId    Int
  courseId     Int
  semester     String
  registeredAt DateTime @default(now())

  // Relations
  course Course @relation(fields: [courseId], references: [id])

  @@unique([studentId, courseId, semester]) // prevent duplicate registration
}
